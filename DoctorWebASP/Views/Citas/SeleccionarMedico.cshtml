@model DoctorWebASP.ViewModels.MedicoViewModel
@{
    ViewBag.Title = "SeleccionarMedico";
}

<section class="content-header">
    <h1>
        Cita Medica
        <small>Solicitud de Cita</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Cita</a></li>
        <li class="active">Solicitar Cita</li>
    </ol>
</section>

<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Seleccione el medico con el cual desea generar la cita</h3>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div class="box-body">
                    <input type="hidden" name="CentroMedicoId" id="CentroMedicoId" value="@Model.CentroMedicoId" />
                    <div class="form-group">
                        @Html.Label("Medico", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(m => m.MedicoId, Model.Medicos as SelectList, htmlAttributes: new { size = 7, @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.MedicoId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Seleccionar" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")


}
